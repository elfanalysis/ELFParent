<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/i">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_elf_rank"
        android:id="@+id/imageView5"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4" />

    />


    <CustomUI.UbuntuRegular
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="State rank"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/white_light"
        android:id="@+id/editText"
        android:layout_below="@+id/imageView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_state_rank"
        android:id="@+id/imageView10"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />


    <ImageView
        android:layout_width="190dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_user_profile"
        android:id="@+id/imageView4"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText" />

    <CustomUI.UbuntuRegular
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Elf rank"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/white_light"
        android:id="@+id/ubuntuRegular"
        android:layout_below="@id/imageView5"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp"/>

    <CustomUI.HelviticaLight
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/imageView4"
        android:layout_marginTop="15dp"
        android:id="@+id/username"
        android:text="User name"
        android:gravity="center"
        android:textColor="@color/black_900"
        android:textSize="28sp"/>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_class"
        android:layout_below="@id/username"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/imageView7" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Phone Number"
        android:textColor="@color/black_900"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@+id/username"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginLeft="05dp"
        android:id="@+id/textView7" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_phone_number"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:id="@+id/imageView9"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Class"
        android:textColor="@color/black_900"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/textView4"
        android:layout_below="@+id/username"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="School"
        android:textColor="@color/black_900"
        android:textSize="15sp"
        android:layout_marginTop="59dp"
        android:id="@+id/editText2"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/username"
        android:layout_alignEnd="@+id/username" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_school"
        android:id="@+id/imageView11"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/button"
        android:text="FOllow his progress"
        android:textColor="@color/black_900"
        android:background="@drawable/add_student_button"
        android:textSize="18sp"
        android:typeface="serif"
        android:layout_below="@+id/editText2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>


</RelativeLayout>