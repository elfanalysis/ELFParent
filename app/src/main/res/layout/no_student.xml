<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/i">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_pic_height"
        android:layout_marginTop="@dimen/user_pic_mtop"
        android:src="@drawable/ic_user_profile"
        android:id="@+id/imageView" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" NO STUDENT ADDED"
        android:gravity="center"
        android:textSize="@dimen/nostudent_added_txt_size"
        android:textColor="@color/black_900"
        android:typeface="serif"
        android:id="@+id/textView6"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="@dimen/nostudent_added_txt_top" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Student By Student Id"
        android:textColor="@color/black_900"
        android:textSize="@dimen/find_txt_size"
        android:gravity="center"
        android:typeface="serif"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/nostudent_added_txt_top"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Id Here"
        android:textSize="@dimen/find_txt_size"
        android:gravity="center"
        android:textColorHint="@color/black_dribble"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/nostudent_added_txt_top"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/editText3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_student_button"
        android:id="@+id/button2"
        android:layout_below="@+id/editText3"
        android:text="search"
        android:textSize="@dimen/find_txt_size"
        android:typeface="serif"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="@dimen/nostudent_added_txt_top" />


</RelativeLayout>